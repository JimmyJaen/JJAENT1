<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JJAENT1.Vistas.Vprincipal"
             Title="Vprincipal">
    <StackLayout Padding="20">
        <Label Text="Aporte al IESS" FontSize="20" HorizontalOptions="Center" />

        <Entry Placeholder="Nombres" x:Name="txtNombre" />
        <Entry Placeholder="Apellidos" x:Name="txtApellido" />
        <Entry Placeholder="Edad" x:Name="txtEdad" Keyboard="Numeric" />
        <Entry Placeholder="Salario" x:Name="txtSalario" Keyboard="Numeric" />

        <Button Text="Calcular Aporte al IESS" Clicked="btnCalcularAporteClicked" />

    </StackLayout>
</ContentPage>